DEPTH = ..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

ifeq (win32,$(SB_PLATFORM))
FLASH_PLUGIN = NPSWF32
VLC_PLUGIN = npvlc

UNZIP_SRC = $(XULRUNNER_DIR)/xulrunner.zip
UNZIP_DEST_DIR = $(SONGBIRD_DISTDIR)

SONGBIRD_MAIN_APP = $(SONGBIRD_XULRUNNERDIR)/xulrunner-stub$(BIN_SUFFIX)

SONGBIRD_COMPONENTS = $(DEPS_DIR)/plugins/flash/components/*.xpt \
                      $(NULL)
                      
SONGBIRD_PLUGINS = $(DEPS_DIR)/plugins/vlc/plugins/*$(DLL_SUFFIX) \
                   $(DEPS_DIR)/plugins/flash/plugins/*$(DLL_SUFFIX) \
                   $(NULL)

SONGBIRD_VLCPLUGINS = $(DEPS_DIR)/plugins/vlc/plugins/plugins/*$(DLL_SUFFIX) \
                      $(NULL)
             
SONGBIRD_XULRUNNER = $(DEPS_DIR)/sqlite/$(SB_CONFIGURATION)/bin/*$(DLL_SUFFIX) \
                     $(DEPS_DIR)/id3lib/$(SB_CONFIGURATION)/bin/*$(DLL_SUFFIX) \
                     $(DEPS_DIR)/runtime/$(SB_CONFIGURATION)/*$(DLL_SUFFIX) \
                     $(NULL)
                     
SONGBIRD_DIST = $(DEPS_DIR)/runtime/$(SB_CONFIGURATION)/*$(DLL_SUFFIX) \
                $(DEPS_DIR)/plugins/vlc/songbirdvlcrc \
                $(NULL)
                     
endif

ifeq (linux,$(SB_PLATFORM))

GUNZIP_SRC = $(XULRUNNER_DIR)/xulrunner.tar.gz
GUNZIP_DEST_DIR = $(SONGBIRD_XULRUNNERDIR)

SONGBIRD_MAIN_APP = $(SONGBIRD_XULRUNNERDIR)/xulrunner-stub$(BIN_SUFFIX)

ifneq ("x86_64", "$(SB_ARCH)")

FLASH_PLUGIN = libflashplayer
SONGBIRD_COMPONENTS += $(PLUGINS_DIR)/flash/components/flashplayer.xpt
SONGBIRD_PLUGINS    += $(PLUGINS_DIR)/flash/plugins/$(FLASH_PLUGIN)$(DLL_SUFFIX)

endif

# non-existent variable, VLC no-worky on linux yet...
ifdef (SB_LINUX_VLC)
VLC_PLUGIN = libvlcplugin

SONGBIRD_PLUGINS += $(PLUGINS_DIR)/vlc/plugins/$(VLC_PLUGIN)$(DLL_SUFFIX)
SONGBIRD_COMPONENTS += $(PLUGINS_DIR)/vlc/components/vlcintf.xpt
SONGBIRD_VLCPLUGINS = $(PLUGINS_DIR)/vlc/vlcplugins/*$(DLL_SUFFIX)
endif

SONGBIRD_XULRUNNER = $(DEPS_DIR)/id3lib/$(SB_CONFIGURATION)/lib/libid3-3.8.so.3.0.0 \
                     $(DEPS_DIR)/id3lib/$(SB_CONFIGURATION)/lib/libid3-3.8.so.3 \
                     $(DEPS_DIR)/id3lib/$(SB_CONFIGURATION)/lib/libid3.so \
                     $(NULL)
endif

ifeq (macosx,$(SB_PLATFORM))
GUNZIP_SRC = $(XULRUNNER_DIR)/xulrunner.tar.gz
GUNZIP_DEST_DIR = $(SONGBIRD_XULRUNNERDIR)
SONGBIRD_MAIN_APP = $(SONGBIRD_XULRUNNERDIR)/xulrunner$(BIN_SUFFIX)

SONGBIRD_XULRUNNER = $(DEPS_DIR)/id3lib/$(SB_CONFIGURATION)/lib/*$(DLL_SUFFIX) \
                     $(DEPS_DIR)/sqlite/$(SB_CONFIGURATION)/lib/*$(DLL_SUFFIX) \
                     $(DEPS_DIR)/libogg/$(SB_CONFIGURATION)/lib/*$(DLL_SUFFIX) \
                     $(NULL)
endif

ifeq (macosx,$(SB_PLATFORM))
EXECUTABLE = $(SONGBIRD_XULRUNNERDIR)/xulrunner-bin$(BIN_SUFFIX)
else
EXECUTABLE = $(SONGBIRD_XULRUNNERDIR)/xulrunner$(BIN_SUFFIX)
endif

include $(topsrcdir)/build/rules.mk
