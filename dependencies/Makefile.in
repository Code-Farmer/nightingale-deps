DEPTH = ..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

UNZIP_SRC = $(srcdir)/$(SB_PLATFORM)/xulrunner/$(SB_CONFIGURATION)/xulrunner.zip

UNZIP_DEST_DIR = $(SONGBIRD_XULRUNNERDIR)

SONGBIRD_MAIN_APP = $(SONGBIRD_XULRUNNERDIR)/xulrunner-stub$(BIN_SUFFIX)

SONGBIRD_COMPONENTS = $(DEPS_DIR)/plugins/vlc/components/*.xpt \
                      $(DEPS_DIR)/plugins/flash/components/*.xpt \
                      $(NULL)
                      
SONGBIRD_PLUGINS = $(DEPS_DIR)/plugins/vlc/plugins/*$(DLL_SUFFIX) \
                   $(DEPS_DIR)/plugins/flash/plugins/*$(DLL_SUFFIX) \
                   $(NULL)

SONGBIRD_VLCPLUGINS = $(DEPS_DIR)/plugins/vlc/vlcplugins/*$(DLL_SUFFIX) \
                      $(NULL)

SONGBIRD_XULRUNNER = $(DEPS_DIR)/sqlite/$(SB_CONFIGURATION)/bin/*$(DLL_SUFFIX) \
                     $(NULL)

EXECUTABLE = $(SONGBIRD_XULRUNNERDIR)/xulrunner$(BIN_SUFFIX) \
             $(NULL)

include $(topsrcdir)/build/rules.mk
